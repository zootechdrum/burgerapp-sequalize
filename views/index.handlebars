<div class="container">
    <header>
        <h1 class="text-center">Eat Da Burger!!</h1>
    </header>
    <div class="burger-img-cont text-center">
        <img class="burger-img" src="../assets/img/burger.png">
    </div>
    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-center">
                <form class="form-inline burger-form ">
                    <div class="form-group mx-sm-3 mb-2">
                        <label for="burger" class="sr-only">Enter Burger</label>
                        <input type="text" class="form-control" id="burger" placeholder="Enter Burger">
                    </div>
                    <button id="submit" type="submit" class="btn btn-info mb-2">Submit</button>
                </form>
            </div>

        </div>
    </div>
    <section class="burgersStat">
        <div class="row">
            <div class="col">
                <div class="">
                    <header class="text-center burger-header">
                        <h2>Burgers To Eat</h2>
                    </header>
                    <ul class="text-center notEaten">
                        {{#each burger}} 
                         {{#unless devoured}}
                        {{> burgers/burger-block eaten=true}} 
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="col">
                <div>
                    <header class="text-center burger-header">
                        <h2>Burgers Eaten</h2>
                    </header>

                    <ul>
                        {{#each burger}} 
                        {{#if devoured}} 
                        {{> burgers/burger-block eaten=false}} 
                        {{/if}} 
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </section>

</div>
